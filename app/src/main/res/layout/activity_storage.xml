<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chooseRackLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SA_label1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/rackNumPick"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/chooseRackLbl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:np_height="64dp"
        app:np_orientation="horizontal"
        app:np_textSize="10dp"
        app:np_width="180dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/chooseShelfLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SA_label2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseRackLbl"
        app:layout_constraintVertical_bias="0.068" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/shelfNumPick"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/chooseShelfLbl"
        app:layout_constraintTop_toBottomOf="@+id/rackNumPick"
        app:layout_constraintVertical_bias="0.03"
        app:np_height="64dp"
        app:np_orientation="horizontal"
        app:np_textSize="10dp"
        app:np_width="180dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="402dp"
        android:layout_height="566dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelfNumPick"
        tools:listitem="@layout/storage_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>